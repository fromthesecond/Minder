<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryBlue500</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="titleStyle" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="flatButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:width">80dp</item>
        <item name="android:height">36dp</item>
        <item name="android:textColor">@color/colorPrimaryBlue500</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>
    <style name="raisedButton" parent="flatButton">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/colorPrimaryBlue500</item>
    </style>
    <style name="customEditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">#ff212121</item>
        <item name="colorControlActivated">@color/colorPrimaryBlue500</item>
        <item name="colorControlHighlight">#424242</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="customEditText2" parent="customEditText">
        <item name="android:textSize">14sp</item>
        <item name="android:editTextColor">@color/colorWhite</item>
        <item name="colorControlHighlight">#424242</item>
    </style>
    <style name="ToolBarCustom" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryBlue500</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">false</item>
    </style>
</resources>
