<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#00bcd4</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="titleStyle" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="flatButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:width">80dp</item>
        <item name="android:height">36dp</item>
        <item name="android:textColor">#03a9f4</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>
    <style name="raisedButton" parent="flatButton">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#00bcd4</item>
    </style>
</resources>
