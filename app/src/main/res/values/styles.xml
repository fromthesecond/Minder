<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#00bcd4</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="titleStyle" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="flatButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:width">80dp</item>
        <item name="android:height">36dp</item>
        <item name="android:textColor">#03a9f4</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>
    <style name="raisedButton" parent="flatButton">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#00bcd4</item>
    </style>
    <style name="customEditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">#ff212121</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">#424242</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="customEditText2" parent="customEditText">
        <item name="android:textSize">14sp</item>
        <item name="android:editTextColor">#FFFFFF</item>
        <item name="colorControlHighlight">#424242</item>
    </style>
    <style name="ToolBarCustom" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
